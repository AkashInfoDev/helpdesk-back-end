{
    "info": {
        "_postman_id": "customer-flow-collection",
        "name": "Customer - Live Chat & KB Flow",
        "description": "Postman collection for Customer role flows: register (OTP), login, start chat, view own sessions/messages, and access public KB categories/articles.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Auth / Registration",
            "item": [
                {
                    "name": "Send OTP (Register)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test Customer\",\n  \"email\": \"customer@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"customer\"\n}"
                        },
                        "url": "{{base_url}}/api/auth/register/send-otp"
                    }
                },
                {
                    "name": "Verify OTP (Create Account)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Test Customer\",\n  \"email\": \"customer@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"customer\",\n  \"otp\": \"123456\"\n}"
                        },
                        "url": "{{base_url}}/api/auth/register/verify-otp"
                    }
                },
                {
                    "name": "Customer Login",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"customer@example.com\",\n  \"password\": \"Password123!\",\n  \"role\": \"customer\"\n}"
                        },
                        "url": "{{base_url}}/api/auth/login"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "  const json = pm.response.json();",
                                    "  if (json.token) pm.environment.set('customer_token', json.token);",
                                    "  if (json.user && json.user.id) pm.environment.set('customer_id', json.user.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                }
            ]
        },
        {
            "name": "Live Chat - Customer",
            "item": [
                {
                    "name": "Start Chat Session",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customer_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"subject\": \"Need help with billing\",\n  \"metadata\": { \"page_url\": \"/pricing\" },\n  \"priority\": \"low\"\n}"
                        },
                        "url": "{{base_url}}/api/live-chat/start"
                    },
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200 || pm.response.code === 201) {",
                                    "  const json = pm.response.json();",
                                    "  const session = json.session || json.data || json;",
                                    "  if (session && session.id) pm.environment.set('session_id', session.id);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ]
                },
                {
                    "name": "My Sessions",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customer_token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/live-chat/my-sessions"
                    }
                },
                {
                    "name": "Get Session Messages",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customer_token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/live-chat/{{session_id}}/messages"
                    }
                },
                {
                    "name": "Convert Session to Ticket (Forbidden for customer)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customer_token}}"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": "{{base_url}}/api/live-chat/{{session_id}}/convert-to-ticket"
                    }
                }
            ]
        },
        {
            "name": "Knowledge Base (Public)",
            "item": [
                {
                    "name": "Get Active KB Categories",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customer_token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/kb/categories/active"
                    }
                },
                {
                    "name": "Search Articles",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customer_token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/kb/articles/search?q=password&is_public=true",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "kb",
                                "articles",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "password"
                                },
                                {
                                    "key": "is_public",
                                    "value": "true"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Article By ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{customer_token}}"
                            }
                        ],
                        "url": "{{base_url}}/api/kb/articles/{{kb_article_id}}"
                    }
                }
            ]
        }
    ],
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:5000"
        },
        {
            "key": "customer_token",
            "value": ""
        },
        {
            "key": "customer_id",
            "value": ""
        },
        {
            "key": "session_id",
            "value": ""
        },
        {
            "key": "kb_article_id",
            "value": ""
        }
    ]
}