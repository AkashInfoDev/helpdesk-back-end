{
	"info": {
		"_postman_id": "auth-helpdesk-collection",
		"name": "Authentication API - Registration & Login",
		"description": "Complete authentication API collection for Customer, Agent, and Admin registration and login",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Customer Registration",
			"item": [
				{
					"name": "Step 1: Send OTP",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res.message === 'OTP sent successfully') {",
									"    pm.environment.set('customer_email', pm.request.body.urlencoded.get('email'));",
									"    pm.test('OTP sent successfully', () => {",
									"        pm.expect(res.message).to.include('OTP sent');",
									"    });",
									"}",
									"",
									"// Note: Check your email for OTP code"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"customer@example.com\",\n    \"password\": \"CustomerPassword123!\",\n    \"role\": \"customer\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/send-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register", "send-otp"]
						},
						"description": "Step 1: Send OTP to customer email for registration verification"
					}
				},
				{
					"name": "Step 2: Verify OTP & Create Account",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res.message === 'Account created successfully') {",
									"    pm.test('Account created', () => {",
									"        pm.expect(res.user).to.have.property('id');",
									"        pm.expect(res.user.role).to.eql('customer');",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"customer@example.com\",\n    \"password\": \"CustomerPassword123!\",\n    \"role\": \"customer\",\n    \"otp\": \"123456\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/register/verify-otp",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "register", "verify-otp"]
						},
						"description": "Step 2: Verify OTP code received via email and create customer account. Replace '123456' with actual OTP from email."
					}
				}
			]
		},
