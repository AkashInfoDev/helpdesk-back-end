		{
			"name": "3. Login",
			"item": [
				{
					"name": "Customer Login",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const res = pm.response.json();",
									"if (res.token) {",
									"    pm.environment.set('customer_token', res.token);",
									"    pm.test('Login successful', () => {",
									"        pm.expect(res.token).to.be.a('string');",
									"        pm.expect(res.user.role).to.eql('customer');",
									"    });",
									"} else {",
									"    pm.test('Login failed', () => {",
									"        pm.expect(res.token).to.exist;",
									"    });",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json",
								"type": "text"
							}
						],
						"body": {
