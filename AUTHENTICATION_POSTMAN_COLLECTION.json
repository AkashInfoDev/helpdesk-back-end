							"raw": "{\n    \"email\": \"customer@example.com\",\n    \"password\": \"CustomerPassword123!\",\n    \"role\": \"customer\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/auth/login",
							"host": ["{{base_url}}"],
							"path": ["api", "auth", "login"]
						},
						"description": "Login as customer. Token will be automatically saved to 'customer_token' environment variable."
					}
				},
